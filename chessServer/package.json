{
  "name": "chessserver",
  "version": "1.0.0",
  "description": "The main server for handling multiple client connections.",
  "main": "main.js",
  "scripts": {
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register ./src/main.ts",
    "build": "tsc --build && tsc-alias",
    "start": "node dist/main.js",
    "format:check": "prettier --check .",
    "format": "prettier --write ."
  },
  "keywords": [
    "node",
    "http",
    "socket"
  ],
  "author": "Karan Yadav",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "socket.io": "^4.8.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
